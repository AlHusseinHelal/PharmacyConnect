<!-- ADD PATIENT MODAL -->
<div class="connectmodal modal fade" id="exampleModal5" data-bs-backdrop="static" tabindex="-1"
aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="glass modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title fs-5" id="exampleModalLabel">
        Add Stat Order
      </h1>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">

      <form id="add_stat_inpatient">
        <div class="mb-3">
          <label for="mrnstat" class="col-form-label">MRN</label>
          <input name="mrn" type="text" class="form-control" id="mrnstat" />
        </div>

        <div id="mrnstatempty" class=" d-flex flex-row align-items-center my-2 d-none"
          style="border: 1px solid #dee2e6; border-left: 3px solid red; border-radius: 5px;">
          <img class="ms-1" src="/svg/alertsign-02.svg" height="20vh" alt="">
          <p class="my-1 ms-1">You Must Enter This Field</p>
        </div>

        <div id="mrnstatnotnumber" class=" d-flex flex-row align-items-center my-2 d-none"
          style="border: 1px solid #dee2e6; border-left: 3px solid red; border-radius: 5px;">
          <img class="ms-1" src="/svg/alertsign-02.svg" height="20vh" alt="">
          <p class="my-1 ms-1">Please Enter A Valid MRN</p>
        </div>

        
        <div id="nostatpatient" class=" d-flex flex-row align-items-center my-2 d-none"
          style="border: 1px solid #dee2e6; border-left: 3px solid red; border-radius: 5px;">
          <img class="ms-1" src="/svg/alertsign-02.svg" height="20vh" alt="">
          <p class="my-1 ms-1">This Patient Not Found</p>
        </div>

        <div class="mb-3">
          <label hidden for="patientname" class="col-form-label">Patient Name</label>
          <input hidden name="patientname" type="text" class="form-control" id="patientstatname" value="patientname" />
        </div>

        <div class="mb-3">
          <label for="ptfloor" class="form-label">Patient Floor</label>
          <select id="ptstatfloor" name="ptfloor" class="form-select">
            <option disabled hidden selected></option>
            <option>2nd</option>
            <option>3rd O</option>
            <option>3rd N</option>
            <option>4th</option>
            <option>5th</option>
            <option>6th</option>
            <option>MCU</option>
            <option>SCU</option>
            <option>ER</option>
            <option>ICC</option>
            <option>OR</option>
            <option>SICU</option>
            <option>DayCare</option>
            <option>Dispense</option>
            <option>OutPatient</option>
            <option>ICU</option>
          </select>
        </div>

        <div id="noptstatfloor" class=" d-flex flex-row align-items-center my-2 d-none"
          style="border: 1px solid #dee2e6; border-left: 3px solid red; border-radius: 5px;">
          <img class="ms-1" src="/svg/alertsign-02.svg" height="20vh" alt="">
          <p class="my-1 ms-1">You Must Enter This Field</p>
        </div>

        <div class="mb-3 d-none">
          <label for="requestype" class="form-label">Request Type</label>
          <select class="form-select" name="requestype" id="requestypestat">
            <option hidden selected>STAT</option>
          </select>
        </div>

      
        <div class="mb-3 d-none" >
          <label for="oraliv" class="form-label">Oral/IV</label>
          <select class="form-select" id="oralivstat" name="oraliv">
            <option hidden selected>IV</option>
          </select>
        </div>


        <div class="mb-3 d-none">
          <label for="prepcomment" class="col-form-label"></label>
          <input dir="rtl" name="prepcomment" type="text" class="form-control" id="prepcommentstat" />
        </div>

        <input hidden name="attachfile" type="text" class="form-control" id="attachfilestat" value="" />
        <input hidden name="commentime" type="text" class="form-control" id="commentimestat" value="" />
        <input hidden name="commentime2" type="text" class="form-control" id="commentime2stat" value="" />
        <input hidden name="edit" type="text" class="form-control" id="editstat" value="" />
        <input hidden name="sender" type="text" class="form-control" id="senderstat"  value="<%= user.firstname + "." + user.lastname %>" />

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        Close
      </button>
      <button type="submit" class="btn btn-primary">
        Send message
      </button>
      </form>
    </div>
  </div>
</div>
</div>